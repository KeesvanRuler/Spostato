@inject IModalService Modal

<div>
    @if (Result.CarImagePath != null)
    {
        <img src="@Result.CarImagePath" alt="Auto" class="img-fluid" />
    }

    <p>@Result.ResultMessage</p>

    @if (Result.ProgressionGained != 0)
    {
        <p>Rank progressie: @(Result.ProgressionGained > 0 ? "+" : "")@Result.ProgressionGained.ToString("F2")%</p>
    }

    @if (Result.MoneyGained > 0)
    {
        <p>Geld verdiend: €@Result.MoneyGained</p>
    }

    @if (Result.ShootingSkillGained > 0)
    {
        <p>Schiet ervaring: +@Result.ShootingSkillGained.ToString("F2")</p>
    }

    @if (Result.DrivingSkillGained > 0)
    {
        <p>Rij ervaring: +@Result.DrivingSkillGained.ToString("F2")</p>
    }

    @if (Result.BreakoutSkillGained > 0)
    {
        <p>Uitbreek ervaring: +@Result.BreakoutSkillGained.ToString("F2")</p>
    }

    <RadzenButton Text="Sluiten" Click="Close" ButtonStyle="ButtonStyle.Secondary" />
</div>
